doctype html
html(lang=site.lang)
  include ../template/_head
  body
    include ../template/_header 
    section.contact
      .container
        .row
          .col-4
            .title-section
              h2 Contacto
            form(action="")
              fieldset
                legend Para ofrecer un mejor Servicio ponemos a su disposicion este espacio para sus comentarios.
                ul.form-contact
                  li 
                    label(for="name")  Nombre:
                    input#name(type="text")
                  li 
                    label(for="tel") Telefono:
                    input#tel(type="text")                    
                  li 
                    label(for="email") Correo Electr&oacute;nico:
                    input#email(type="email")
                  li
                    label(for="type-message") Tipo de Mensaje:
                    select#type-message(name="")
                      option(value="0") -Seleccionar-
                      option(value="1") -Queja-
                  li 
                    label(for="comment") Comentario:
                    textarea#comment(name="", cols="30", rows="10")
                  li
                    .notifications
                      .col-1 
                        input(type="checkbox")  
                      .col-11
                        label Deseo ser notificadx de las acciones tomadas                                      
                  li
                    .send-contact
                      input.btn-default.button(type="submit")
          .col-8
            div.floating-panel
              b Como llegar
              select#mode
                option(value="SELECT") Seleccione una Opcion
                option(value="DRIVING") En Auto
                option(value="WALKING") A pie
                option(value="TRANSIT") En Transporte Publico
                option(value="BICYCLING") En Bicicleta
            .map#map
    include ../template/_footer